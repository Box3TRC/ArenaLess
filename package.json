{
  "name": "arenaless",
  "displayName": "arenaless",
  "description": "BOX3<->VSCode.dev | WEB powers Box3+TypeScript development!(support vscode.dev)(compatible with ArenaPro)",
  "version": "0.0.9",
  "publisher": "tobylai",
  "icon": "arenaless.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Education"
  ],
  "keywords": [
    "box3",
    "dao3",
    "岛研所",
    "菜鸡AIPlus",
    "TypeScript",
    "神奇代码岛",
    "Arena",
    "ArenaLess",
    "ArenaPro",
    "tobylai"
  ],
  "activationEvents": [
    "onCommand:arenaless.activate-ext",
    "workspaceContains:dao3.config.json",
    "onView:caiplusaichat"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "title": "菜鸡AIPlus",
          "submenu": "caiplus-menu",
          "group": "2_cosy",
          "when": "editorLangId == typescript || editorLangId == javascript && arenaless.activated && editorHasSelection"
        }
      ],
      "caiplus-menu": [
        {
          "command": "arenaless.caiplus.ask_with_code"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "caiplus-container",
          "title": "CaiPlus AI",
          "icon": "resources/caiplus.svg"
        }
      ]
    },
    "submenus": [
      {
        "id": "caiplus-menu",
        "label": "菜鸡AIPlus"
      }
    ],
    "views": {
      "caiplus-container": [
        {
          "id": "caiplusaichat",
          "name": "CaiPlus AI Chat",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "arenaless.activate-ext",
        "title": "激活ArenaLess扩展 (WEB版可能不能自动激活)",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.project.create",
        "title": "创建ArenaLess项目",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.project.buildtest",
        "title": "测试构建项目并输出构建到控制台(仅调试使用)",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.panel",
        "title": "打开ArenaLess面板",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.dao3.login",
        "title": "Dao3登录",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.dao3.logout",
        "title": "Dao3登出",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.project.link",
        "title": "链接扩展地图",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.project.buildNUpload",
        "title": "构建并上传项目",
        "category": "ArenaLess"
      },
      {
        "command": "arenaless.caiplus.ask_with_code",
        "title": "携带代码向菜鸡提问",
        "category": "菜鸡AIPlus"
      }
    ],
    "configuration": [
      {
        "title": "ArenaLess Dao3 User",
        "properties": {
          "arenaless.dao3.user.userAgent": {
            "type": "string",
            "description": "第一步：设置浏览器用户代理，获取方式：https://passer-by.com/browser/"
          },
          "arenaless.dao3.user.userToken": {
            "type": "string",
            "description": "第二步：设置神岛账号Token。在dao3.fun登录后，打开：https://code-api-pc.dao3.fun/auth/user 将\"token\":后面的内容不带引号粘贴"
          }
        }
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.7",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-web": "^0.0.55",
    "assert": "^2.1.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "glob": "^10.4.2",
    "mocha": "^10.5.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@types/node": "^22.2.0",
    "json5": "^2.2.3",
    "pako": "^2.1.0",
    "path-browserify": "^1.0.1",
    "rollup": "^4.20.0",
    "terser": "^5.31.6",
    "typescript": "^5.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Box3TRC/ArenaLess"
  }
}
